.body.root.text-center
  .tags
    = link_to "thug", "?vibe=thug", class: "red"
    = link_to "soul", "?vibe=soul", class: "purple"
    = link_to "wavy", "?vibe=wavy", class: "cyan"
    = link_to "chill", "?vibe=chill", class: "green"
    = link_to "pop", "?vibe=pop", class: "yellow"
    = link_to "punk", "?vibe=punk", class: "bubblegum"
    = link_to "word", "?vibe=word", class: "brown"
    = link_to "thump", "?vibe=thump", class: "mustard"
  .music-videos-wrapper
    - prev_city = nil
    - x = 0
    - @artists.each do |artist|
      - if x == 0
        - prev_city = 'nil'
      - current_city = artist.city
      - if current_city != prev_city && artist != @artists.first
        .city_divider
      .music-video-tile
        .music-video-head
          .row
            .side_column_body.col-xs-1
              - if current_city != prev_city
                = link_to artist_path(artist) do
                  .city_title{:id => "#{artist.id}_city"}
                    - artist.city.upcase.split('').each do |character|
                      - if current_city == "Chicago" || current_city == "Atlanta" || current_city == "New York" || current_city == "Los Angeles" || current_city == "Miami"
                        %p.gold
                          = character
                      -else
                        %p.silver
                          = character
              - prev_city = current_city
              - x += 1
            .center_column_body.col-xs-11
              .artist_title
                -if artist.vibe == "thug"
                  = link_to artist.name, artist_path(artist), class: "red"
                -elsif artist.vibe == "wavy"
                  = link_to artist.name, artist_path(artist), class: "cyan"
                -elsif artist.vibe == "soul"
                  = link_to artist.name, artist_path(artist), class: "purple"
                -elsif artist.vibe == "chill"
                  = link_to artist.name, artist_path(artist), class: "green"
                -elsif artist.vibe == "pop"
                  = link_to artist.name, artist_path(artist), class: "yellow"
                -elsif artist.vibe == "punk"
                  = link_to artist.name, artist_path(artist), class: "bubblegum"
                -elsif artist.vibe == "word"
                  = link_to artist.name, artist_path(artist), class: "brown"
                -elsif artist.vibe == "thump"
                  = link_to artist.name, artist_path(artist), class: "mustard"
                -else
                  = link_to artist.name, artist_path(artist), class: "silver"
              .owl-carousel.owl-theme.row{:id => "#{artist.id}_carousel"}
                - artist.music_videos.each do |music_video|
                  .carousel_contents
                    .col-xs-11
                      .track_title
                        = music_video.title
                        -if !music_video.featuring.empty?
                          = ' ft. '
                          - if @artists.exists?(name: music_video.featuring)
                            - featuring = @artists.find_by(name: music_video.featuring)
                            = link_to music_video.featuring, artist_path(featuring)
                          - else
                            = music_video.featuring
                        -if !music_video.featuring_2.empty?
                          = ' // '
                          - if @artists.exists?(name: music_video.featuring_2)
                            - featuring = @artists.find_by(name: music_video.featuring_2)
                            = link_to music_video.featuring_2, artist_path(featuring)
                          - else
                            = music_video.featuring_2
                        -if !music_video.featuring_3.empty?
                          = ' // '
                          - if @artists.exists?(name: music_video.featuring_3)
                            - featuring = @artists.find_by(name: music_video.featuring_3)
                            = link_to music_video.featuring_3, artist_path(featuring)
                          - else
                            = music_video.featuring_3
                        -if !music_video.featuring_4.empty?
                          = ' // '
                          - if @artists.exists?(name: music_video.featuring_4)
                            - featuring = @artists.find_by(name: music_video.featuring_4)
                            = link_to music_video.featuring_4, artist_path(featuring)
                          - else
                            = music_video.featuring_4
                      .youtube-player-container
                        .youtube-player{ :data => {:id => music_video.youtube_id } }
                    .side_column_body.col-xs-1
                      - music_video.year.split('').each do |character|
                        .row
                          = character
