= simple_form_for [@artist, @music_video] do |f|
  .form-group
    = f.input :title
  .row
    .form-group.col-xs-3
      = f.input :featuring
    .form-group.col-xs-3
      = f.input :featuring_2
    .form-group.col-xs-3
      = f.input :featuring_3
    .form-group.col-xs-3
      = f.input :featuring_4
  .form-group
    = f.input :year
  .form-group
    = f.input :link
  .form-group.text-center
    = f.button :submit
