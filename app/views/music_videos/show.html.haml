.music-videos-wrapper.row
  .music-video
    .music-video-head
      .row
        .col-xs-2
          = @music_video.location
        .col-xs-8
          = @music_video.artist
          %br
          = @music_video.title
          %br
          = @music_video.featuring
          = @music_video.youtube_id
          %iframe{:src => "http://www.youtube.com/embed/#{@music_video.youtube_id}", width:"400", height:"200"}
        .col-xs-2
          = @music_video.year
      .text-center.edit-links
        = link_to "Delete Video", music_video_path(@music_video), method: :delete, data: { confirm: 'Are you sure you want to delete "' + @music_video.title + '"?' }
        |
        = link_to "Home", music_videos_path
        |
        = link_to "Edit Video", edit_music_video_path(@music_video)
